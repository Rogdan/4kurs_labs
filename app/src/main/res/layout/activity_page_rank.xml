<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/latte_background">

    <include
        layout="@layout/item_title_bar"
        android:id="@+id/title_bar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="36dp"
        android:layout_below="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/enter_address"
            style="@style/DarkSubtitleTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/link_et"
            android:hint="@string/link"
            android:layout_width="match_parent"
            android:inputType="textUri"
            android:imeOptions="actionDone"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/calculate_page_rank_tv"
            style="@style/BlueButtonStyle"
            android:text="@string/calculate_page_rank"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/page_rank_result_tv"
            style="@style/DarkSubtitleTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/progress_bar"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>