<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTS">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OrangeButtonStyle" parent="ButtonStyle">
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/ripple_orange_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GreyButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/ripple_grey_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DarkSubtitleTS">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="MediumTS">
        <item name="android:textColor">@color/grey</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightSubtitle">
        <item name="android:paddingTop">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="LightHintTV" parent="DarkSubtitleTS">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FloatInputET">
        <item name="android:digits">0123456789.</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="LayoutWithETStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
</resources>
